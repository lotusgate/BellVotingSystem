@model BellVotingSystem.WEB.Models.Entry.EntryCreateViewModel

@{
    ViewData["Title"] = "VOte";
}

<h1>Vote</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Song" class="control-label"></label>
                <input asp-for="Song" class="form-control" />
                <span asp-validation-for="Song" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="AllSongs">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
